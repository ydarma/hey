HeyGrammar {
  Prog =
    Def* Val
  
  Def =
    "def" identifier Prog
  
  Val = Range | Square | Fun | Call | number | identifier | color
    
  Range =
    "range" "(" Val Val Val ")"

  Square =
    "square" "(" Val Val ")"
    
  Call =
    identifier "(" Val* ")"
    
  Fun =
    argList ":" Prog
    
  argList = "(" identifier* ")"

  color = "green" | "blue" | "yellow" | "red" | "purple" | "grey" | "black" | "white"

  number = digit+

  identifier = (alnum | "-")+
}